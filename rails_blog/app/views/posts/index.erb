<% @posts.each do |post| %>
  <div><%= link_to post.title, blog_post_path(post.blog_id, post) %>  </div>
    <% if show_edit_actions(post) %>
      <div><%= link_to 'edit', edit_blog_post_path(post.blog_id, post) %></div>
      <div><%= link_to 'delete', blog_post_path(post.blog_id, post), :method => :delete %></div>
    <% end %>
  <% end %>
<% end %>
